                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# <a href="{{ path('planning_hebdomadaire_new') }}">Create new</a> #}
    </div>
{% endblock %}
